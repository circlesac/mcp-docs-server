{
  "name": "@circlesac/mcp-docs-server",
  "version": "0.0.6",
  "description": "Simple CLI for serving Markdown docs as an MCP server and packaging them for npm.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "src",
    "templates",
    "docs",
    "mcp-docs-server.json",
    "wrangler.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bunx rimraf dist && bunx tsc --project tsconfig.build.json",
    "prepublishOnly": "bun run scripts/check-version.ts && bun run build",
    "dev": "bun run src/cli.ts",
    "lint": "npx @circlesac/lint --all",
    "test": "bunx vitest run --coverage"
  },
  "packageManager": "bun@1.3.1",
  "dependencies": {
    "agents": "^0.2.23",
    "read-package-up": "^12.0.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.10",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.12",
    "bun-types": "^1.3.2",
    "memfs": "^4.51.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12",
    "wrangler": "^4.50.0"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.1.0"
  }
}
