{
  "name": "@circlesac/mcp-docs-server",
  "version": "0.0.6",
  "description": "Simple CLI for serving Markdown docs as an MCP server and packaging them for npm.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "templates",
    "docs",
    "mcp-docs-server.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bunx rimraf dist && bunx tsc --project tsconfig.build.json",
    "prepublishOnly": "bun run scripts/check-version.ts && bun run build",
    "dev": "bun run src/cli.ts",
    "lint": "npx @circlesac/lint --all",
    "test": "bunx vitest run --coverage"
  },
  "packageManager": "bun@1.3.1",
  "dependencies": {
    "@mastra/mcp": "^0.14.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250122.0",
    "@cloudflare/vitest-pool-workers": "^0.5.11",
    "@types/node": "^20.16.5",
    "@vitest/coverage-v8": "^1.6.0",
    "bun-types": "^1.1.23",
    "memfs": "^4.50.0",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0",
    "wrangler": "^3.96.0"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.1.0"
  }
}
