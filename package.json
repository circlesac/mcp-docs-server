{
  "name": "@circlesac/mcp-docs-server",
  "version": "0.1.8",
  "description": "Simple CLI for serving Markdown docs as an MCP server and packaging them for npm.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "src",
    "templates",
    "docs",
    "prompts",
    "resources",
    "mcp-docs-server.json",
    "wrangler.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bunx rimraf dist && npx -p @typescript/native-preview tsgo --project tsconfig.build.json",
    "build:docker": "docker build -t mcp-docs-server .",
    "dev:docker": "bun run build:docker && docker run --rm -v \"$(pwd)/.build:/mcp-docs-server/.build\" mcp-docs-server sh -c \"cd /mcp-docs-server && npx @circlesac/mcp-docs-server cloudflare --dry-run\" && cd .build/cloudflare && npx wrangler dev",
    "prepublishOnly": "bun run scripts/check-version.ts && bun run build",
    "dev": "bun run src/cli.ts",
    "lint": "npx @circlesac/lint --all",
    "test": "bunx vitest run --coverage"
  },
  "packageManager": "bun@1.3.1",
  "dependencies": {
    "@hono/mcp": "^0.2.0",
    "@mdx-js/mdx": "^3.1.1",
    "@modelcontextprotocol/sdk": "^1.24.1",
    "hono": "^4.10.7",
    "mime-types": "^3.0.2",
    "node-html-parser": "^7.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "read-package-up": "^12.0.0",
    "to-vfile": "^8.0.0",
    "vfile-matter": "^5.0.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.15",
    "bun-types": "^1.3.3",
    "memfs": "^4.51.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "wrangler": "^4.51.0"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.1.0"
  }
}
